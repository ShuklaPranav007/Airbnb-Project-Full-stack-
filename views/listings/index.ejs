<% layout("/layouts/boilerplate") %>
<style>
  .filter {
    display: flex;
    align-items: center;
  }
  .filter div {
    text-align: center;
    margin: 2rem 2rem 0 0;
    opacity: 0.7;
  }
  .filter div:hover {
    opacity: 1;
    cursor: pointer;
  }
  .tax-info{
    display: none;
  }
  .toggle{
    border: 1px solid black;
    border-radius: 1rem;
    margin-left: 2rem;
    display: flex;
    align-items: center;

  }
 .form-check-label{
    color:brown;
  }
</style>

<body>
  <div id="filters" >
    <div class="filter">
      <div>
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
      </div>
      <div>
        <i class="fa-solid fa-bed"></i>
        <p>Stay</p>
      </div>
      <div>
        <i class="fa-solid fa-bowl-food"></i>
        <p>Services</p>
      </div>
      <div>
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
      </div>
      <div>
        <i class="fa-solid fa-bed"></i>
        <p>Stay</p>
      </div>
      <div>
        <i class="fa-solid fa-bowl-food"></i>
        <p>Services</p>
      </div>
      <div>
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
      </div>
      <div>
        <i class="fa-solid fa-bed"></i>
        <p>Stay</p>
      </div>
      <div>
        <i class="fa-solid fa-bowl-food"></i>
        <p>Services</p>
      </div>
      <div>
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
      </div>
      <div>
        <i class="fa-solid fa-bed"></i>
        <p>Stay</p>
      </div>
      <div>
        <i class="fa-solid fa-bowl-food"></i>
        <p>Services</p>
      </div>

      <div class="toggle">
        <div class="form-check-reverse form-switch">
          <input
            class="form-check-input"
            type="checkbox"
            role="switch"
            id="switchCheckDefault"
          />
          <label class="form-check-label" for="switchCheckDefault"
            >Total after GST</label
          >
        </div>
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let listing of allListings) { %>
    <a href="/listings/<%= listing.id %>" class="listing-link">
      <div class="card">
        <img
          src="<%= listing.image%>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <%= listing.title %> <br />
            &#8377; <%= listing.price.toLocaleString("en-IN") %> /night 
            <i class="tax-info">+18%</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>


<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", ()=>{
    let taxinfo = document.getElementsByClassName("tax-info");
    for (info of taxinfo){
      if(info.style.display != "inline"){
      info.style.display = "inline";}else{
        info.style.display = "none";
      }
    }
  });
</script>